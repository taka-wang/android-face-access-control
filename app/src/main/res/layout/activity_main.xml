<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:paddingLeft="@dimen/activity_horizontal_margin"    android:paddingRight="@dimen/activity_horizontal_margin"    android:paddingTop="@dimen/activity_vertical_margin"    android:paddingBottom="@dimen/activity_vertical_margin"    android:focusable="true"    android:focusableInTouchMode="true"    android:keepScreenOn="true"    android:orientation="vertical"    tools:context="net.cmwang.accesscontrol.MainActivity"    android:background="#212121">    <TextView        android:id="@+id/heading"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="@string/paired_devices"        android:layout_alignParentTop="true"        android:fontFamily="sans-serif-smallcaps"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:textColor="#f44336"        android:textIsSelectable="false" />    <ListView        android:id="@+id/devices_list_view"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/heading"        android:layout_above="@+id/device_paired" />    <EditText        android:id="@+id/door_number"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_above="@+id/server_address"        android:layout_alignParentStart="true"        android:layout_gravity="center"        android:textColor="#f44336"        android:fontFamily="sans-serif-smallcaps"        android:hint="Door Number"        android:inputType="number"        android:text="@string/default_door_number" />    <EditText        android:id="@+id/server_address"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_above="@+id/device_paired"        android:layout_alignParentStart="true"        android:layout_gravity="center"        android:textColor="#f44336"        android:fontFamily="sans-serif-smallcaps"        android:hint="Server Address"        android:inputType="text"        android:text="@string/default_server_address" />    <Button        android:id="@+id/device_paired"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="@string/paired_devices"        android:layout_alignParentBottom="true"        android:layout_alignParentLeft="true"        android:textColor="#212121"        android:fontFamily="sans-serif-smallcaps"        android:layout_alignParentStart="true"        android:layout_alignParentRight="true"        android:layout_alignParentEnd="true"        android:background="#f44336" /></RelativeLayout>