<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>

        <!-- change TextInputEditText bottom line color -->
        <item name="colorControlNormal">@color/colorRed</item>
        <item name="colorControlActivated">@color/colorRed</item>
        <item name="colorControlHighlight">@color/colorRed</item>

    </style>

    <style name="NoActionBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="android:textColorPrimary">@android:color/background_light</item>

        <!-- change TextInputEditText bottom line color -->
        <item name="colorControlNormal">@color/colorRed</item>
        <item name="colorControlActivated">@color/colorRed</item>
        <item name="colorControlHighlight">@color/colorRed</item>

    </style>

    <!-- with action bar style. -->
    <style name="ActionBarStyle" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>

        <!-- change TextInputEditText bottom line color -->
        <item name="colorControlNormal">@color/colorRed</item>
        <item name="colorControlActivated">@color/colorRed</item>
        <item name="colorControlHighlight">@color/colorRed</item>
    </style>

    <!-- TextInputLayout hint color -->
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
